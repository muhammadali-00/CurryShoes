@model Lab_Asssignment._1.Models.Customer
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/RL-Layout.cshtml";
}
<section class=" ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="wrap d-md-flex">
                    <div class="img" style="background-image: url('../../content/assets/img/curryabout3.jpg');">
                    </div>
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">Log In</h3>
                            </div>
                            <div class="w-100">
                                <p class="social-media d-flex justify-content-end">
                                    <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                    <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                                </p>
                            </div>
                        </div>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <form action="#" class="signin-form">

                                <div class="form-group mb-3">
                                    <label class="label" for="name">Username</label>
                                    @Html.TextBoxFor(model => model.email, new { @class = "form-control required", placeholder = "Username" })
                                    @Html.ValidationMessageFor(model => model.email)
                                </div>
                                <div class="form-group mb-3">
                                    <label class="label" for="password">Password</label>
                                    @Html.PasswordFor(model => model.pass, new { @class = "form-control required", placeholder = "Password" })
                                    @Html.ValidationMessageFor(model => model.pass)
                                </div>
                                <div class="form-group">
                                    <input style="background-color:#e51d1d; color:white" type="submit" value="Log In" class="btn btn-default form-control btn rounded  px-3" />
                                </div>

                                <div class="form-group d-md-flex">
                                    <div class="w-50 text-left">
                                        <label style="color: #e51d1d;" class="checkbox-wrap checkbox mb-0">
                                            Remember Me
                                            <input type="checkbox" checked>
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                    <div class="w-50 text-md-right">
                                        <a href="#">Forgot Password</a>
                                    </div>
                                </div>
                            </form>
                        }
                        <p class="text-center">
                            Not a member?

                            <a href="#" class="pl-2">
                                @Html.ActionLink("Register Here", "Registration", "Customers", new { area = "" }, new { @class = "text-danger" })
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

