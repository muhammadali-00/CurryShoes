
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center">

    <div class="container" data-aos="zoom-out" data-aos-delay="100">
        <div class="row d-flex justify-content-between">
            <div class="col-xl-6 mt-5 pt-3">
                <h2>Curry Flow 10 <br />'Iron Sharpens Iron'<br />Basketball Shoes</h2>
                <h5 class="mt-4">Go off, switch directions fast with a<br /> supportive plate that keeps your foot<br />secure. </h5>
                @Html.ActionLink("Shop Now", "Shop", "Website", new { area = "" }, new { @class = "btn-get-started" })
            </div>
            @*<div class="col-xl-4 mt-5 me-4 d-flex justify-content-end">
                <img src="~/Content/assets/img/curryabout1.jpg" width="250" height="380"/>
            </div>*@
        </div>
    </div>

</section><!-- End Hero -->

<!-- ======= About Section ======= -->
<section id="about" class="about container">
    <div class="row ps-5 ms-5">
        <div class="content col-xl-5">
            <div class="content">
                <h6><bold>Curry Brand Gear</bold></h6>
                <h3><strong>"FOR ME, IT'S<br />GAME-CHANGING."</strong></h3>
                <p>
                    "Everything I put my name on has to be good— it has to help you play and it has to support our mission to change the game for good."
                </p><br />
                <p>– Stephen Curry, 4x NBA Champion </p>
                @Html.ActionLink("About Us", "About", "Website", new { area = "" }, new { @class = "about-btn" })
            </div>
        </div>
        <div class="col-xl-6 ms-5">
            <img src="~/Content/assets/img/curry-brand-3m.png" width="500" height="500"/>
        </div>
    </div>
</section>
