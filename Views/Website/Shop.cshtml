@model IEnumerable<Lab_Asssignment._1.Models.Prd_Details>
@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <ol>
                <li>@Html.ActionLink("Home", "Home", "Website", new { area = "" }, new { @class = "" })</li>
                <li>Shop</li>
            </ol>

        </div>
    </section><!-- End Breadcrumbs -->

    <div class="inner-page">
        <div class="row">
            <!-- ======= Sidebar ======= -->
            <div class="col-md-3">
                <div class=" w3-bar-block pb-4">
                    <br />
                    <form class="d-flex m-3 " role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-danger" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                    <h4 style="display:inline" class="w3-bar-item"><strong>Filters</strong></h4>
                    <div class="row portfolio">
                        <div class="col-lg-12 mt-4 ms-3">
                            <ul id="portfolio-flters">
                                <li data-filter="*" class="filter-active">Clear All</li>
                                <li data-filter=".filter-app">Unisex</li>
                                <li data-filter=".filter-card">Kids</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ======= Items Section ======= -->
            <div class="col-md-9">
                <section id="portfolio" class="container portfolio">
                    <div class="container" data-aos="fade-up">

                        <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">

                            @foreach (var item in Model.OrderBy(m => m.Product.prd_ID).GroupBy(m => new { m.prd_ID, m.colour }).Select(group => group.First()))

                            {
                                @*@foreach (var item in ViewData["overall"] as IEnumerable<Lab_Asssignment._1.Models.OverallProduct>)*@
                            if (item.Product.gender == "Unisex")
                            {
                                //using (Html.BeginForm("Product_Details", "Website", FormMethod.Post))
                                {
                                        <div class="col-lg-4 col-md-6 px-3 portfolio-item filter-app">
                                            <div class="portfolio-wrap">

                                                <img class="img-fluid" src="@Url.Content(item.Prd_Colour.img_1)" />
                                                <div class="portfolio-info">
                                                    <h4>@Html.DisplayFor(modelItem => item.Prd_Colour.colour_scheme)</h4>
                                                    <p>@Html.DisplayFor(modeItem => item.Product.Category.ctgry_name)</p>
                                                    <div class="portfolio-links">
                                                        @*<a href="/Content/assets/img/portfolio/portfolio-1.jpg" data-gallery="portfolioGallery" class="portfolio-lightbox"><i class="bx bx-plus"></i></a>*@
                                                        

                                                        @*@Html.ActionLink("p", "Product_Details", new { id = item.prd_ID, clr = item.colour }, new { @class = "bx bx-link" })*@
                                                        @Html.ActionLink(" ", "Product_Details", new { id = @item.prd_ID, clr = item.colour }, new { @class = "bx bx-link" })
                                                    </div>
                                                </div>
                                            </div>

                                            <h6><strong>@Html.DisplayFor(modeItem => item.Product.gender) @Html.DisplayFor(modeItem => item.Product.prd_name) @Html.DisplayFor(modeItem => item.Prd_Colour.colour_scheme) @Html.DisplayFor(modeItem => item.Product.Category.ctgry_name)</strong></h6>
                                            <p style="font-size:small">﻿PKR @Html.DisplayFor(modeItem => item.price_current)</p>
                                            @*<input type="submit" value="Show" id="@item.prd_ID" class="btn btn-danger" style="width:100%"/>*@
                                        </div>
                                }
                            }
                            else
                            {
                                //using (Html.BeginForm("Product_Details", "Website", FormMethod.Post))
                                {
                                    <div class="px-3 col-lg-4 col-md-6 portfolio-item filter-card">
                                        <div class="portfolio-wrap">

                                            <img class="img-fluid" src="@Url.Content(item.Prd_Colour.img_1)" />
                                            <div class="portfolio-info">
                                                <h4>@Html.DisplayFor(modelItem => item.Prd_Colour.colour_scheme)</h4>
                                                <p>@Html.DisplayFor(modeItem => item.Product.Category.ctgry_name)</p>
                                                <div class="portfolio-links">
                                                    @Html.ActionLink(" ", "Product_Details", new { id = item.prd_ID, clr = item.colour }, new { @class = "bx bx-link" })
                                                </div>
                                            </div>
                                        </div>

                                        <h6><strong>@Html.DisplayFor(modeItem => item.Product.gender) @Html.DisplayFor(modeItem => item.Product.prd_name) @Html.DisplayFor(modeItem => item.Prd_Colour.colour_scheme) @Html.DisplayFor(modeItem => item.Product.Category.ctgry_name)</strong></h6>
                                        <p style="font-size:small">﻿PKR @Html.DisplayFor(modeItem => item.price_current)</p>
                                        @*<input type="submit" value="Show" id="@item.prd_ID" class="btn btn-danger" style="width:100%"/>*@
                                    </div>


                                    }
                                }
                            }

                        </div>

                    </div>
                </section><!-- End Portfolio Section -->
            </div>
        </div>
    </div>

</main><!-- End #main -->
