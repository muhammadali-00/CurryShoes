
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <ol>
                <li>@Html.ActionLink("Home", "Home", "Website", new { area = "" }, new { @class = "" })</li>
                <li>About</li>
            </ol>

        </div>
    </section><!-- End Breadcrumbs -->

    <section class="inner-page">
        <div class="container" data-aos="fade-up">
            <div class="row">
                <div class="col-md-6">
                    <img src="~/Content/assets/img/curryabout2.jpg" />
                </div>
                <div class="col-md-6">
                    <h2 style="font-weight:800">Stephen CURRY</h2>
                    <span style="font-size:small">NBA Basketball Player</span>
                    <p class="mt-3">Wardell Stephen Curry II is an American professional basketball player for the Golden State Warriors of the National Basketball Association.</p>
                    <h4><strong>Mission</strong></h4>
                    <p>To make all athletes better through passion, design, and the relentless pursuit of innovation.</p>
                    <h3 style="font-weight:900">CHANGE THE GAME FOR GOOD</h3>
                    <p>“We want to stand for something meaningful, not just with the product that we're creating, but in the why. We want to create opportunity, inspire the next generation, and give more resources to kids that really need it.”</p>
                    <span>– Stephen Curry, 4x NBA Champion</span>
                </div>
            </div>
        </div>
    </section>

</main><!-- End #main -->
