@model IEnumerable<Lab_Asssignment._1.Models.Order_Master>

@{
    ViewBag.Title = "Invoice";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h2>Invoice</h2>

<div class="container-fluid p-5">

    @foreach (var item in Model.Reverse().Take(1))
    {
        <div class="row my-2">
            <div class="col-2">
                <h2>@Html.DisplayNameFor(model => model.order_ID)</h2>
            </div>
            <div class="col-4">
                <h2>@Html.DisplayFor(modelItem => item.order_ID)</h2>
            </div>
        </div>
        <hr class="mb-5" />

        <div class="row my-2">
            <div class="col-2">
                @Html.DisplayNameFor(model => model.d_address)
            </div>
            <div class="col-4">
                @Html.DisplayFor(model => item.d_address)
            </div>
        </div>

        <div class="row my-2">
            <div class="col-2">
                @Html.DisplayNameFor(model => model.Customer.cust_name)
            </div>
            <div class="col-4">
                @Html.DisplayFor(model => item.Customer.cust_name)
            </div>
        </div>

        <div class="row my-2">
            <div class="col-2">
                @Html.DisplayNameFor(model => model.Payment.pay_method)
            </div>
            <div class="col-4">
                @Html.DisplayFor(model => item.Payment.pay_method)
            </div>
        </div>

        <hr class="mt-5" />
        <div class="my-2">
            <h3>Order Summary</h3>
            @RenderPage("~/Views/Shared/partialviewCart.cshtml")
        </div>

        <hr class="mt-3" /> 
        <div class="mb-5">
            <h2>
                @if (Session["email"] != null)
                {
                    <p>Thank You! <br />@Session["email"].ToString()<br />for shopping from us! </p>
                }
            </h2>
        </div>
    }

</div>
<p>
    @*@Html.ActionLink("Back to List", "Index")*@
</p>
